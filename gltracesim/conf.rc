export PKG_CONFIG_PATH=$BASE_LOCAL/lib/pkgconfig:$BASE_LOCAL/usr/lib64/pkgconfig:$BASE_LOCAL/share/pkgconfig/:$PKG_CONFIG_PATH

LOCAL_ROOT=$BASE

export PYTHONPATH="${LOCAL_ROOT}/protobuf/python:${PYTHONPATH}"
